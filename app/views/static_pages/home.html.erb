        <section class="user_info">
          <%= render 'shared/user_infor' %>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>

        <section class="micropost_form">
          <%= render 'shared/micropost_form' %>
        </section>
      </aside>
      <div class="col-md-8">
        <h3>Micropost Feed</h3>
        <%= render 'shared/feed' %>
      </div>
  <% else %>

  <% end %>
</div>



